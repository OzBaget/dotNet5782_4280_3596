<Window x:Class="PL.ReleaseDroneDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ReleaseDroneDialog"    
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        MinWidth="200"
        MinHeight="100"

        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="5">
        <TextBlock Margin="5" Text="Charging time(hh:mm):"/>
        <TextBox Margin="5,0,0,0" x:Name="ResponseTextBox" Width="50" HorizontalAlignment="Left"/>
        <TextBlock Margin="5,0,0,0" x:Name="ErrorText" FontSize="9"  Foreground="Red"></TextBlock>
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="Cencel" IsCancel="True" Margin="5"/>
            <Button Content="OK" Click="OKButton_Click" Margin="5" IsDefault="True"/>
        </StackPanel>
    </StackPanel>

</Window>
