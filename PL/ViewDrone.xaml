<Window x:Class="PL.ViewDrone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ViewDrone" Height="640" Width="800" >
    <Grid>
        <Grid x:Name="DroneViewGrid" Visibility="Visible">
            <Image x:Name="BackgroundDrones" Width="800" MinWidth="1" Height="640" Margin="1,-8,-1,-8">
                <Image.Source>
                    <BitmapImage  UriSource="/Images/DoneViewNew.png" />
                </Image.Source>
            </Image>
            <Button x:Name="Cancel" Foreground="White" IsCancel="True" FontFamily="Fonts/#Alfa Slab One"  Opacity="0" HorizontalAlignment="Left" Margin="743,13,0,0" VerticalAlignment="Top" Width="29" Height="23" Click="Cancel_Click" RenderTransformOrigin="0.5,0.5"/>
            <TextBlock x:Name="MaxWeighBox" FontFamily="Fonts/#Hey Comic"  FontSize="18" HorizontalAlignment="Left" Margin="624,155,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"   Padding="0" Background="Transparent"  />
            <TextBlock x:Name="BatteryBox" FontFamily="Fonts/#Hey Comic" FontSize="18" HorizontalAlignment="Left" Margin="166,283,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"   Padding="0" Background="Transparent"  />
            <TextBlock x:Name="IdBox" FontFamily="Fonts/#Hey Comic" FontSize="18" HorizontalAlignment="Left" Margin="166,150,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"   Padding="0" Background="Transparent" />
            <TextBlock x:Name="StatusBox" FontFamily="Fonts/#Hey Comic" FontSize="18" HorizontalAlignment="Left" Margin="624,415,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"   Padding="0" Background="Transparent" />
            <Image x:Name="updateButton" HorizontalAlignment="Left" Height="81" Margin="343,402,0,0" VerticalAlignment="Top" Width="50" Source="Images/checked.png" MouseLeftButtonDown="Update_Click" />
            <TextBox x:Name="ModelBox" FontFamily="Fonts/#Hey Comic" FontSize="18" HorizontalAlignment="Left" Margin="166,415,0,0" Text="TextB                    ox" TextWrapping="Wrap" VerticalAlignment="Top" Width="114"   Padding="0" Background="Transparent" BorderThickness="0" TextChanged="ModelChanged" Height="23" />
            <TextBlock x:Name="LocationBox" FontFamily="Fonts/#Hey Comic" FontSize="18" HorizontalAlignment="Left" Margin="624,283,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"   Padding="0" Background="Transparent"  />
            <TextBlock x:Name="ParcelId" HorizontalAlignment="Left" Margin="365,192,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"   Padding="0" Background="Transparent"/>
            <Label x:Name="Parcel" HorizontalAlignment="Left" Margin="43,105,0,0" Content="Pacrel"  VerticalAlignment="Top" Width="118"  BorderThickness="0" Padding="0" Background="Transparent" />
            <Image x:Name="ChargeButton" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="178" Source="/Images/Charge.png" MouseLeftButtonDown="ChargeDrone_Click" Margin="77,495,0,0" />
            <Image x:Name="ReleaseButton" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="178" Source="/Images/Release.png" MouseLeftButtonDown="Release_Click" Margin="77,495,0,0" Visibility="Hidden"/>
            <Image x:Name="PickUpButton" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="178" Source="/Images/Pick up parcel.png" MouseLeftButtonDown="PickUp_Click" Margin="535,495,0,0" Visibility="Hidden"/>
            <Image x:Name="LinkButton" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="178" Source="/Images/Link to parcel.png" MouseLeftButtonDown="Link_Click" Margin="535,495,0,0" />
            <Image x:Name="DeliverButton" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="178" Source="/Images/Deliver parcel.png" MouseLeftButtonDown="Deliver_Click" Margin="535,495,0,0" Visibility="Hidden"/>
            <Grid x:Name="ParcelDetials">
                <Image HorizontalAlignment="Left" Height="168" VerticalAlignment="Top" Width="112" Source="/Images/Parcel details.png" MouseLeftButtonDown="Deliver_Click" Margin="337,157,0,0" />
                <Button x:Name="button" Content="" Margin="357,243,367,329" Opacity="0" Click="PacelDetaitls_Click"/>
                <TextBlock x:Name="IdParcel" HorizontalAlignment="Center" Margin="0,199,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>
            </Grid>


        </Grid>
        <Grid x:Name="AddDroneGrid" Visibility="Collapsed">
            <Image x:Name="BackgroundAddDrone" Width="800" MinWidth="1" Height="650" Margin="0,-21,0,-5" Source="/Images/AddDroneNew.png">
            </Image>
            <TextBox x:Name="AddModel" HorizontalAlignment="Left" Margin="498,185,0,0" Text="" FontSize="18" FontFamily="Fonts/#Hey Comic" TextWrapping="Wrap" VerticalAlignment="Top" Width="248" Height="19"  BorderThickness="0" Padding="0,-7,0,0" Background="Transparent"></TextBox>
            <TextBox x:Name="AddID" HorizontalAlignment="Left" Margin="46,185,0,0" Text="" FontSize="18" FontFamily="Fonts/#Hey Comic" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="18" BorderThickness="0" Padding="0,-7,0,0" Background="Transparent"/>
            <ComboBox x:Name="AddIdStation" HorizontalAlignment="Left" Margin="492,428,0,0" FontSize="18" FontFamily="Fonts/#Hey Comic" Text=""  VerticalAlignment="Top" Width="289" Height="20" BorderThickness="0" Padding="0,-7,0,0" Background="Transparent"/>
            <ComboBox x:Name="AddMaxWeight" HorizontalAlignment="Left" Margin="39,423,0,0" FontSize="18" FontFamily="Fonts/#Hey Comic" VerticalAlignment="Top" Width="263" Padding="0" Height="25" />
            <Button x:Name="Add" Opacity="0" IsDefault="True" HorizontalAlignment="Center" Margin="0,527,0,0" VerticalAlignment="Top" Width="148" Height="28" Click="Add_Click" />

            <Button x:Name="CanacelButton" Opacity="0" IsCancel="True" HorizontalAlignment="Left" Margin="746,37,0,0" VerticalAlignment="Top" Width="32" Click="Cancel_Click" Height="20" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

        </Grid>
    </Grid>


</Window>
