<Window x:Class="PL.ViewDrone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="ViewDrone" Height="440" Width="800">
    <Grid>
        <Grid x:Name="DroneViewGrid" Visibility="Collapsed">
            <Image x:Name="BackgroundDrones" Width="800" MinWidth="1" Height="450" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="-15,-24,0,0">
                <Image.Source>
                    <BitmapImage  UriSource="/Images/DroneView.png" />
                </Image.Source>
            </Image>
            <Button x:Name="BringParcel" Foreground="White" FontFamily="Fonts/#Alfa Slab One"  Content="Bring the parcel to customer" HorizontalAlignment="Left" Margin="552,325,0,0" VerticalAlignment="Top" Width="207" Height="20" Click="Bring_Click"  Background="Transparent" FontStyle="Normal" FontWeight="Normal" BorderBrush="Transparent" >
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <StackPanel Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" x:Name="panel">
                                        <ContentPresenter Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" />
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsPressed" Value="true">
                                            <Setter Property="Background" Value="Gray" TargetName="panel" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Background" Value="LightGray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                
            </Button>
            <Button x:Name="CollectParcel" Foreground="White" FontFamily="Fonts/#Alfa Slab One"  Content="Collect parcel" HorizontalAlignment="Left" Margin="557,371,0,0" VerticalAlignment="Top" Width="208" Height="20" Click="Collect_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <StackPanel Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" x:Name="panel">
                                        <ContentPresenter Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" />
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsPressed" Value="true">
                                            <Setter Property="Background" Value="Gray" TargetName="panel" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Background" Value="LightGray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="UpdateButton" Foreground="White" FontFamily="Fonts/#Alfa Slab One"  Content="Update" HorizontalAlignment="Left" Margin="32,325,0,0" VerticalAlignment="Top" Width="208" Height="20" Click="Update_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <StackPanel Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" x:Name="panel">
                                        <ContentPresenter Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" />
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsPressed" Value="true">
                                            <Setter Property="Background" Value="Gray" TargetName="panel" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Background" Value="LightGray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="SendDroneToCharge" Foreground="White" FontFamily="Fonts/#Alfa Slab One"  Content="Send drone to charge" HorizontalAlignment="Center" Margin="6,327,0,0" VerticalAlignment="Top" Width="208" Height="20" Click="Charge_Click" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.136"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.248"/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <StackPanel Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" x:Name="panel">
                                        <ContentPresenter Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" />
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsPressed" Value="true">
                                            <Setter Property="Background" Value="Gray" TargetName="panel" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Background" Value="LightGray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="RealseDroneFromeCharge" Foreground="White" FontFamily="Fonts/#Alfa Slab One"  Content="Realse drone from charging" HorizontalAlignment="Center" Margin="7,371,0,0" VerticalAlignment="Top" Width="208" Height="20" Click="Realse_Click" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.136"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.248"/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <StackPanel Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" x:Name="panel">
                                        <ContentPresenter Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" />
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsPressed" Value="true">
                                            <Setter Property="Background" Value="Gray" TargetName="panel" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Background" Value="LightGray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="DroneToDelevery" Foreground="White" FontFamily="Fonts/#Alfa Slab One"  Content="Link dorne to parcel" HorizontalAlignment="Left" Margin="35,371,0,0" VerticalAlignment="Top" Width="208" Height="20" Click="Link_Click" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.136"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.248"/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <StackPanel Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" x:Name="panel">
                                        <ContentPresenter Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" />
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsPressed" Value="true">
                                            <Setter Property="Background" Value="Gray" TargetName="panel" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Background" Value="LightGray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="ParcelView" Foreground="White" FontFamily="Fonts/#Alfa Slab One"  Content="Parcel details" HorizontalAlignment="Left" Margin="51,212,0,0" VerticalAlignment="Top" Width="93" Height="70" Click="PacelDetaitls_Click" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.136"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.248"/>
                    </TransformGroup>
                </Button.RenderTransform>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <StackPanel Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" x:Name="panel">
                                        <ContentPresenter Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" />
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsPressed" Value="true">
                                            <Setter Property="Background" Value="Gray" TargetName="panel" />
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="true">
                                            <Setter Property="Background" Value="LightGray" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="Cancel" Foreground="White" IsCancel="True" FontFamily="Fonts/#Alfa Slab One"  Opacity="0" HorizontalAlignment="Left" Margin="743,13,0,0" VerticalAlignment="Top" Width="29" Height="23" Click="Cancel_Click" RenderTransformOrigin="0.5,0.5"/>

            <TextBlock x:Name="MaxWeighBox" FontFamily="Fonts/#Cotton Butter"  FontSize="18" HorizontalAlignment="Left" Margin="659,91,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"   Padding="0" Background="Transparent"  />
            <Label x:Name="MaxWeightLable" FontFamily="Fonts/#Cotton Butter" FontSize="18" Content="MaxWeight:" HorizontalAlignment="Left" Margin="558,86,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="BatteryBox" FontFamily="Fonts/#Cotton Butter" FontSize="18" HorizontalAlignment="Left" Margin="663,144,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"   Padding="0" Background="Transparent"  />
            <Label x:Name="BatteryLable" FontFamily="Fonts/#Cotton Butter" FontSize="18" Content="Battery:" HorizontalAlignment="Left" Margin="552,138,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="IdBox" FontFamily="Fonts/#Cotton Butter" FontSize="18" HorizontalAlignment="Left" Margin="379,144,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"   Padding="0" Background="Transparent" />
            <Label x:Name="IdLable" FontFamily="Fonts/#Cotton Butter" FontSize="18" Content="ID:" HorizontalAlignment="Left" Margin="283,141,0,0" VerticalAlignment="Top" />
            <TextBlock x:Name="StatusBox" FontFamily="Fonts/#Cotton Butter" FontSize="18" HorizontalAlignment="Left" Margin="666,203,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"   Padding="0" Background="Transparent" />
            <Label x:Name="StatusLable" FontFamily="Fonts/#Cotton Butter" FontSize="18" Content="Status:" HorizontalAlignment="Left" Margin="558,198,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="ModelBox" FontFamily="Fonts/#Cotton Butter" FontSize="18" HorizontalAlignment="Left" Margin="378,206,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="142"   Padding="0" Background="Transparent" BorderThickness="0" />
            <Label x:Name="ModelLable" FontFamily="Fonts/#Cotton Butter" FontSize="18" Content="Model:" HorizontalAlignment="Left" Margin="284,201,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="LatBox" FontFamily="Fonts/#Cotton Butter" FontSize="18" HorizontalAlignment="Left" Margin="565,261,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"   Padding="0" Background="Transparent"  />
            <Label x:Name="Lat" FontFamily="Fonts/#Cotton Butter" FontSize="18" Content="Lat:" HorizontalAlignment="Left" Margin="541,256,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="LngBox" FontFamily="Fonts/#Cotton Butter" FontSize="18" HorizontalAlignment="Left" Margin="675,261,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"   Padding="0" Background="Transparent" />
            <Label x:Name="Lng" FontFamily="Fonts/#Cotton Butter" FontSize="18" Content="Lng:" HorizontalAlignment="Left" Margin="650,256,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="ParcelId" HorizontalAlignment="Left" Margin="67,155,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"   Padding="0" Background="Transparent"/>
            <Label x:Name="Parcel" HorizontalAlignment="Left" Margin="43,105,0,0" Content="Pacrel"  VerticalAlignment="Top" Width="118"  BorderThickness="0" Padding="0" Background="Transparent" />
        </Grid>
        <Grid x:Name="AddDroneGrid" Visibility="Collapsed">
            <Image x:Name="BackgroundAddDrone" Width="800" MinWidth="1" Height="450" Margin="0,-20,0,-6">
                <Image.Source>
                    <BitmapImage  UriSource="/Images/AddDrone.png" />
                </Image.Source>
            </Image>
            <TextBox x:Name="AddModel" HorizontalAlignment="Left" Margin="480,131,0,0" Text="" FontSize="18" FontFamily="Fonts/#Cotton Butter" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" Height="19"  BorderThickness="0" Padding="0,-7,0,0" Background="Transparent"></TextBox>
            <ComboBox x:Name="AddIdStation" HorizontalAlignment="Left" Margin="480,273,0,0" FontSize="18" FontFamily="Fonts/#Cotton Butter" Text=""  VerticalAlignment="Top" Width="263" Height="20" BorderThickness="0" Padding="0,-7,0,0" Background="Transparent"/>
            <TextBox x:Name="AddID" HorizontalAlignment="Left" Margin="30,131,0,0" Text="" FontSize="18" FontFamily="Fonts/#Cotton Butter" TextWrapping="Wrap" VerticalAlignment="Top" Width="263" Height="18" BorderThickness="0" Padding="0,-7,0,0" Background="Transparent"/>
            <ComboBox x:Name="AddMaxWeight" HorizontalAlignment="Left" Margin="30,270,0,0" FontSize="18" FontFamily="Fonts/#Cotton Butter" VerticalAlignment="Top" Width="263" Padding="0" Height="25" />
            <Button x:Name="Add" Opacity="0" IsDefault="True" HorizontalAlignment="Left" Margin="322,365,0,0" VerticalAlignment="Top" Width="147" Height="28" Click="Add_Click" />

            <Button x:Name="CanacelButton" Opacity="0" IsCancel="True" HorizontalAlignment="Left" Margin="731,13,0,0" VerticalAlignment="Top" Width="29" Click="Cancel_Click"/>

        </Grid>
    </Grid>


</Window>
