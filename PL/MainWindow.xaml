<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="640" Width="800">
    <Grid>
        <MediaElement x:Name ="GifDrones" Source="Images/MainWindow.gif" LoadedBehavior="Play" UnloadedBehavior="Manual" MediaEnded="Again_Gif" Visibility="Visible" Margin="-50,-24,-51,-19" />

        <Button x:Name="button" Click="openDroneList" Content="View drone list" HorizontalAlignment="Left" Margin="277,192,0,0" VerticalAlignment="Top" Height="81" Width="280" Opacity="0" Cursor="Hand"/>

    </Grid>
</Window>
